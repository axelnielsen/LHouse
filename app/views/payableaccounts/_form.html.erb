<div class="modal-dialog">
  <div class="modal-content">
    <%= form_for @payableaccount, remote: true, html: { style: "display:inline;" } do |f| %>
      <div class="modal-body">
        <ul class="errors"></ul>
<div class="col-sm-12">
        <div class="form-group">
          <%= f.label :type, class:"control-label" %>
          <%= f.text_field :type, class: "form-control" %>
        </div> 
</div>
  <%= f.fields_for :subaccounts do |builder| %>
      <%= render "subaccount_fields", :f => builder %>
    <% end %>
 

      </div>
      <div class="modal-footer">
        <%= f.submit class: "btn btn-success" %>
        <%= link_to "Cancelar", "#", class: "btn btn-danger", data: {dismiss: "modal"} %>
      </div>
    <% end %>
  </div>
</div>

$("ul.errors").html("")
<% if @payableaccount.errors.any? %>
  <% @payableaccount.errors.full_messages.each do |message| %>
    $("ul.errors").append($("<li />").html("<%= message.html_safe %>"))
  <% end %>
<% else %>
  $(".payableaccount-index").html("<%= escape_javascript(render 'index') %>")
  $("#payableaccount-modal").modal("hide")
<% end %>
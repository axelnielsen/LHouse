<div class="modal-dialog">
  <div class="modal-content">
    <%= form_for @bankaccount, remote: true, html: { style: "display:inline;" } do |f| %>
      <div class="modal-body">
        <ul class="errors"></ul>
<div class="col-sm-12">
        <div class="form-group">
          <%= f.label "Nombre", class:"control-label" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label "Titular", class:"control-label" %>
          <%= f.text_field :accountholder, class: "form-control" %>
        </div>
</div>
<div class="col-sm-6">
        <div class="form-group">
          <%= f.label "NÂ° de Cuenta", class:"control-label" %>
          <%= f.text_field :accountnum, class: "form-control" %>
        </div>
</div>
<div class="col-sm-6">
        <div class="form-group">
          <%= f.label "Banco", class:"control-label" %>
          <%= f.text_field :bankname, class: "form-control" %>
        </div>
</div>
<div class="col-sm-12">
        <div class="form-group">
          <%= f.label "Balance Inicial", class:"control-label" %>
          <%= f.text_field :initbalance, class: "form-control" %>
        </div>
        <%= f.hidden_field :community_id, :value => current_user.community_id, class: "form-control" %>
</div>

      <div class="modal-footer">
        <%= f.submit class: "btn btn-success" %>
        <%= link_to "Cancelar", "#", class: "btn btn-danger", data: {dismiss: "modal"} %>
      </div>
    <% end %>
  </div>
</div>

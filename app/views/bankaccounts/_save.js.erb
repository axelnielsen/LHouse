$("ul.errors").html("")
<% if @bankaccount.errors.any? %>
  <% @bankaccount.errors.full_messages.each do |message| %>
    $("ul.errors").append($("<li />").html("<%= message.html_safe %>"))
  <% end %>
<% else %>
  $(".bankaccount-index").html("<%= escape_javascript(render 'index') %>")
  $("#bankaccount-modal").modal("hide")
<% end %>
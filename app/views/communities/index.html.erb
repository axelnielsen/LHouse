<h1>Listing communities</h1>
<p>
  Exportar:
  <%= link_to "CSV", communities_path(format: "csv") %> |
  <%= link_to "Excel", communities_path(format: "xls") %>
</p>
<p>Importar:<%= form_tag import_communities_path, multipart: true do %>
  <%= file_field_tag :file %>
  <%= submit_tag "Import" %>

<% end %>
</p>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Address</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Website</th>
      <th>Pass Usuario</th>
      <th>Pass Admin</th>
      <th>Pass Conserje</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @communities.each do |community| %>
      <tr>
        <td><%= community.nombre %></td>
        <td><%= community.address %></td>
        <td><%= community.phone %></td>
        <td><%= community.email %></td>
        <td><%= community.website %></td>
         <td><%= community.userpass %></td>
          <td><%= community.adminpass %></td>
           <td><%= community.concierge %></td>
        <td><%= link_to 'Show', community %></td>
        <td><%= link_to 'Edit', edit_community_path(community) %></td>
        <td><%= link_to 'Destroy', community, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New Community', new_community_path %>


<div class="modal-dialog">
  <div class="modal-content">
    <%= form_for @vendor, remote: true, html: { style: "display:inline;" } do |f| %>
      <div class="modal-body">
        <ul class="errors"></ul>
<div class="col-sm-12">
        <div class="form-group">
          <%= f.label "Nombre", class:"control-label" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :rut, class:"control-label" %>
          <%= f.text_field :rut, class: "form-control" %>
        </div>
</div>
<div class="col-sm-6">
        <div class="form-group">
          <%= f.label "N° de Cuenta", class:"control-label" %>
          <%= f.text_field :accountnum, class: "form-control" %>
        </div>
</div>
<div class="col-sm-6">
        <div class="form-group">
          <%= f.label "Banco", class:"control-label" %>
          <%= f.text_field :bankname, class: "form-control" %>
        </div>
</div>
<div class="col-sm-12">
        <div class="form-group">
          <%= f.label "Teléfono", class:"control-label" %>
          <%= f.text_field :contactphone, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label "Email", class:"control-label" %>
          <%= f.text_field :contactmail, class: "form-control" %>
        </div>
</div>
<div class="col-sm-6">
        <div class="form-group">
          <%= f.label "Sitio Web", class: "control-label" %>
          <%= f.text_field :website, class: "form-control" %>
        </div>
</div>
<div class="col-sm-6">
        <div class="form-group">
          <%= f.label "Dirección", class: "control-label" %>
          <%= f.text_field :address, class: "form-control" %>
        </div>
  </div>
<div class="col-sm-12">
        <div class="form-group">
          <%= f.label "Cuenta De Egreso", class: "control-label" %>
          <%= f.text_field :bankaccount_id, class: "form-control" %>
        </div>
        <%= f.hidden_field :community_id, :value => current_user.community_id, class: "form-control" %>
</div>
      </div>
      <div class="modal-footer">
        <%= f.submit class: "btn btn-success" %>
        <%= link_to "Cancelar", "#", class: "btn btn-danger", data: {dismiss: "modal"} %>
      </div>
    <% end %>
  </div>
</div>

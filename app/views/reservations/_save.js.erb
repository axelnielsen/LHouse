$("ul.errors").html("")
<% if @reservation.errors.any? %>
  <% @reservation.errors.full_messages.each do |message| %>
    $("ul.errors").append($("<li />").html("<%= message.html_safe %>"))
  <% end %>
<% else %>
  $(".reservation-index").html("<%= escape_javascript(render 'index') %>")
  $("#reservation-modal").modal("hide")
<% end %>
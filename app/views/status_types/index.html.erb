<h1>Listing status_types</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @status_types.each do |status_type| %>
      <tr>
        <td><%= status_type.nombre %></td>
        <td><%= status_type.content %></td>        
        <td><%= link_to status_type, class: "" do %>
         <i class="fa fa-eye" style="color:green"></i> </a>
         <% end %> </td>
         <td><%= link_to edit_status_type_path(status_type), class: "" do %>
         <i class="fa fa-pencil-square-o" style="color:orange"></i> </a>
         <% end %> </td>
         <td><%= link_to  status_type, method: :delete, data: { confirm: 'Are you sure?' } , class: "" do %>
         <i class="fa fa-trash" style="color:red"></i> </a>
         <% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= form_for(@journal, remote: true, :html => { :role => "form", :multipart => true, :"data-type" => "json"})  do |f| %>

 <% if @journal.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@journal.errors.count, "error") %> prohibited this journal from being saved:</h2>

      <ul>
      <% @journal.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

   <div id="error_explanation" class="text-danger modal-errors"></div>

   <div class="row">
      <div class="col-sm-12">

         <div class="form-group">
            <%= f.label :name, "Nombre:", :class => "control-label" %>
            <%= f.text_field :name, :class => "form-control first_input" %>
         </div>

         <div class="form-group">
            <%= f.label :vendor_id, "Proveedor:", :class => "control-label" %>
            <%= f.number_field :vendor_id, :class => "form-control" %>
         </div>
      </div>

      <div class="col-sm-6">
         <div class="form-group">
            <%= f.label :paybleaccount_id , "Cuenta por pagar:", :class => "control-label" %>
            <%= f.number_field :paybleaccount_id , :class => "form-control"  %>
         </div>
      </div>

      <div class="col-sm-6">
         <div class="form-group">
            <%= f.label :debit , "Monto:", :class => "control-label" %>
            <%= f.number_field :debit , :class => "form-control" %>
         </div>
      </div>

      
      <div class="col-sm-12">
         <hr style="border: 1; margin-top: 0px; ">
         <div class="form-group" style="margin-bottom: 0px;">
            <%= f.submit "Registrar Movimiento", :class => "btn btn-success bold" %>
         </div>
      </div>
   </div>

<% end %>
